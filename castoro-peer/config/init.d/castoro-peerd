#!/bin/sh
# castoro-peer start/stop script.
# chkconfig: - 85 15
# description: castoro-peer start/stop script.
. /etc/rc.d/init.d/functions

prog=castoro-peerd

dir=`dirname \`which ruby\``
base=${dir}/castoro-peer

cnf=/etc/castoro/core.conf
pid=/var/castoro/core.pid
log=/var/castoro/core.log
env=default

start() {
  echo $"Start Castoro-Peer ..."
  $base start -c $cnf -p $pid -l $log -e $env -d
}

stop() {
  echo $"Stop Castoro-Peer ..."
  $base stop -p $pid
}

case "$1" in
  start)
    start
    ;;
  stop)
    stop
    ;;
  restart)
    stop
    start
    ;;
  status)
    status -p $pid $prog
    ;;
  *)
    echo $"Usage: $prog {start|stop|restart|status}"
esac

